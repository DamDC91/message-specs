<?xml-model href="schemas/kernel/message.xsd"?>

<msg>
  <header>
    <from>Michel</from>
    <to>Roger</to>
    <date>1970-01-01</date>
  </header>
  <text>Bonjour Roger</text>
  <question id="0001" text="As-tu reçu ma lettre ?">
    <checkbox label="Oui je l'ai bien reçue"/>
  </question>
  <question id="0002" text="Que dois-je apporter pour le pique-nique de jeudi ?">
    <radiobutton label="Boissons"/>
    <radiobutton label="Fruits"/>
    <radiobutton label="Chips"/>
  </question>
  <!-- Formulaires: optionnels et nested -->
  <form id="0001" title="Petanque">
    <!-- On peut mettre des champs textes n'importe où dans les forms -->
    <text>Petite pétanque dans les jours à venir ?</text>
    <question id="0003">
      <datepicker label="Quand es-tu dispo pour aller jouer ?"/>
    </question>
    <question id="0004">
      <colorpicker label="De quelle couleur sont tes boules ?"/>
    </question>
  </form>
  <text>À bientôt</text>
</msg>


<msg>
  <header>
    <from>Roger</from>
    <to>Michel</to>
    <date>1970-01-01</date>
  </header>
  <text>Camarade RULLIER est un espion du KGB, ne répond pas avec ce protocole insecure</text>
  <!-- Replies optionnel -->
  <replies>
    <reply question_id="0001">
      <!-- On a coché la première case (ici oui j'ai bien reçue ...) -->
      <reply_checkbox offset="0"/>
    </reply>
    <reply question_id="0001/0003">
      <reply_date value="1970-03-13">
    </reply>
  </replies>
</msg>
